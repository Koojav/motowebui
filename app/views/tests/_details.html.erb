<div class="box box-primary">
  <div class="box-body">
    <div class="box-header with-border">
      <h3 class="box-title">Details</h3>
    </div>

    <table class="table">
      <tbody>
      <tr>
        <td class="col-xs-2"><b>Name</b></td>
        <td><%= @test.name %></td>
      </tr>
      <tr>
        <td><b>Result</b></td>
        <%
          begin
          result = Result.find(@test.result_id)
        %>
        <td><button type="button" class="btn <%= result.display_style_btn %> btn-xs"><%= result.name %></button></td>
        <% end %>
      </tr>
      <tr>
        <td><b>Started</b></td>
        <td><%= @test.start_time.to_s(:db) %></td>
      </tr>
      <tr>
        <td><b>Duration</b></td>
        <td><%= @test.display_duration %></td>
      </tr>
      <% if @test.ticket_url %>
          <tr>
            <td><b>Ticket URL</b></td>
            <td><a href="<%= @test.ticket_url %>"><%= @test.ticket_url %></a></td>
          </tr>
      <% end %>
      <%  if @test.tags %>
          <tr>
            <td><b>Tags</b></td>
            <td>
              <% @test.tags.split(',').each do |tag|%>
              <span class="label label-primary"><%= tag %></span>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @test.error_message %>
<div class="box box-danger">
  <div class="box-header with-border">
    <h3 class="box-title">Error</h3>
  </div>

  <div class="box-body">
    <%= @test.error_message %>
  </div>
</div>
<% end %>

<% if @test.fail_message %>
    <div class="box box-danger">
      <div class="box-header with-border">
        <h3 class="box-title">Failures</h3>
      </div>

      <div class="box-body">
        <%= @test.fail_message %>
      </div>
    </div>
<% end %>

<% if @test.log %>
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Log</h3>
  </div>

  <div class="box-body">
    <%= simple_format(@test.log) %>
  </div>
</div>
<% end %>