<div class="box box-primary">
  <div class="box-body">
    <div class="row">
      <div class="col-md-12">

        <table class="table">
          <tbody>
          <tr>
            <td class="col-md-1"><b>Path</b></td>
            <td><%= render partial: 'shared/nav_path', locals: {navigation_path: @directory.navigation_path} %></td>
          </tr>
          <tr>
            <td class="col-md-1"><b>Assignee</b></td>
            <td>
              <%= render partial: 'dropdown_select_tester', locals: { directory_id: @directory.id, selected_tester_name: @directory.tester.name} %>
            </td>
          </tr>
          <tr>
            <td class="col-md-1"><b>Tests summary</b></td>
            <td>
              <%= link_to 'Get report', directory_report_path(@directory.id), class: 'btn btn-xs btn-primary', method: :get, target: :_blank %>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>

<script>
    $(document).ready(function ()
    {
        prepareDropdownChangeTester();
    });
</script>