<table id="suitesDataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>Name</th>
    <th>Notes</th>
  </tr>
  </thead>
  <tbody>
  <% @suites.each do |suite| %>
      <tr>
        <td><%= link_to suite.name, suite_runs_path(suite.id) %></td>
        <td>Bacon ipsum dolor sit amet salami venison chicken flank fatback doner.</td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>

  $(document).ready(function() {
    $('#suitesDataTable').DataTable(
        {
          paging: <%= @suites.length > 25 ? 'true' : 'false' %>,
          pageLength: 25,
          info: false,
          lengthMenu: [ 25, 50, 100, 200 ]
        }
    );
  } );

</script>

